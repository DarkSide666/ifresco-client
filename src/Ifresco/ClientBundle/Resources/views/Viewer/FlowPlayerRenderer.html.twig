{% javascripts
		'@IfrescoClientBundle/Resources/public/js/jquery.latest.min.js'
        '@IfrescoClientBundle/Resources/public/js/flowplayer/flowplayer.min.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        
{% stylesheets filter='cssrewrite'
